<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kiba.musicapp2.MainActivity"
    android:background="@drawable/pyro">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Autorisation" />

        <Button
            android:id="@+id/st_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="156dp"
            android:text="Start Game" />

        <Button
            android:id="@+id/ab_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/h_b"
            android:layout_alignStart="@+id/h_b"
            android:layout_below="@+id/h_b"
            android:layout_marginTop="36dp"
            android:text="About" />

        <Button
            android:id="@+id/h_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/st_b"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:text="Help" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
